{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"]  
  },
  "include": ["src/**/*"]
}
